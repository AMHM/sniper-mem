TARGET_ARCH = x86_64

# change only if a different (more up-to-date) version of Boost is installed
OS_TYPE?=$(shell $(SIM_ROOT)/tools/get_os_type.sh)
ifeq ($(OS_TYPE),Ubuntu)
BOOST_VERSION = 1_40
else
ifeq ($(OS_TYPE),ScientificLinux)
BOOST_VERSION = 1_38
else
ifeq ($(OS_TYPE),Debian)
BOOST_VERSION = 1_40
endif
endif
endif

# where Pin is unzipped to
PIN_HOME ?= $(SIM_ROOT)/pin_kit


ifeq ($(OS_TYPE),Ubuntu)
CC=gcc
CXX=g++
else
ifeq ($(OS_TYPE),ScientificLinux)
CC=gcc44
CXX=g++44
else
ifeq ($(OS_TYPE),Debian)
CC=gcc
CXX=g++
endif
endif
endif


ifneq ($(DEBUG_SHOW_COMPILE),)
  SHOW_COMPILE=1
  MAKE_QUIET=
else
  SHOW_COMPILE=
  MAKE_QUIET=--quiet
endif

ifneq ($(DEBUG),)
  OPT_CFLAGS = -O0 -g
else
  OPT_CFLAGS = -O2 -g
endif
